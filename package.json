{
	"name": "doubletie",
	"private": true,
	"scripts": {
		"build:libs": "turbo build --filter=./packages/*",
		"build:apps": "turbo build --filter=./apps/*",
		"check-types": "turbo check-types",
		"ci:publish": "pnpm changeset tag && pnpm publish -r",
		"ci:version": "pnpm changeset version",
		"dev:libs": "turbo dev --filter=./packages/*",
		"dev:docs": "turbo dev --filter=./apps/docs/*",
		"fmt": "turbo fmt",
		"lint": "turbo lint",
		"lint:fix": "turbo lint -- --write",
		"knip": "knip",
		"release": "pnpm build && changeset publish",
		"version": "changeset version && pnpm install --lockfile-only"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "^2.28.1",
		"@rsbuild/core": "1.2.16",
		"@rsbuild/plugin-react": "^1.1.1",
		"@rslib/core": "^0.5.3",
		"@types/node": "22.13.10",
		"@types/react": "^19.0.10",
		"@types/react-dom": "^19.0.4",
		"@vitejs/plugin-react": "^4.3.4",
		"@vitest/browser": "^3.0.8",
		"changeset-conventional-commits": "^0.2.5",
		"playwright": "^1.51.0",
		"turbo": "^2.4.4",
		"typescript": "5.8.2",
		"ultracite": "^4.1.20",
		"vitest": "^3.0.8",
		"vitest-browser-react": "^0.1.1"
	},
	"packageManager": "pnpm@9.0.0",
	"engines": {
		"node": ">=18"
	}
}
