{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"extends": ["ultracite"],
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 2,
		"ignore": ["node_modules", "wrangler.jsonc", ".next", "dist", ".wrangler"]
	},
	"javascript": {
		"formatter": {
			"indentStyle": "tab",
			"indentWidth": 2
		}
	},
	"css": {
		"formatter": {
			"indentStyle": "tab",
			"indentWidth": 2
		},
		"parser": {
			"cssModules": true
		}
	},
	"json": {
		"formatter": {
			"indentStyle": "tab",
			"indentWidth": 2
		}
	},
	"linter": {
		"rules": {
			"suspicious": {
				"useAwait": "off",
				"noExplicitAny": "off"
			},
			"complexity": {
				"noThisInStatic": "off",
				"noExcessiveCognitiveComplexity": "off"
			}
		}
	}
}
