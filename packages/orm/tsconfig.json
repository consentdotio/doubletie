{
	"include": ["src/**/*", "tests/**/*"],
	"compilerOptions": {
		"module": "ESNext",
		"outDir": "dist/esm",
		"moduleResolution": "node",
		"target": "ESNext",
		"declaration": true,
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"types": ["node"],
		"skipLibCheck": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"tests/*": ["tests/*"]
		}
	}
}
