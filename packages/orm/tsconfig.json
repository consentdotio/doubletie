{
	"compilerOptions": {
		"baseUrl": "./src",
		"target": "esnext",
		"moduleResolution": "bundler",
		"lib": ["ES2022", "DOM"],
		"strict": true,
		"noEmit": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist", "**/*.test-d.ts", "vitest.config.ts"]
}
